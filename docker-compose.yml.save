version: '3'

services:
  traefik:
    image: traefik:v2.10
    command:
      - "--providers.docker"
      - "--log.level=DEBUG"
      - "--"
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock

networks:
  default:
    name: proxynet
    external: true

  nginx-site1:
    image: nginx:latest
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.site1.rule=Host(`site1.user.parseq.pro`)"
      - "traefik.http.routers.site1.entrypoints=websecure"
      - "traefik.http.routers.site1.tls=true"
    volumes:
      - ./site1:/usr/share/nginx/html

  nginx-site2:
    image: nginx:latest
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.site2.rule=Host(`site1.user.parseq.pro`)"
      - "traefik.http.routers.site2.entrypoints=websecure"
      - "traefik.http.routers.site2.tls=true"
    volumes:
      - ./site2:/usr/share/nginx/html
