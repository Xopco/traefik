version: '3'

services:
  traefik:
    image: traefik:v2.1
    contaier_name: traefik
    command:
      - "--providers.docker"
      - "--log.level=DEBUG"
      - "--providers.docker.exposedbydefault=false"
      - "--providers.docker.network=proxyet"
    ports:
      - "80:80"
      - "443:443"
    restart: unless-stoped
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - ./traefik.yml:/traefik.yml:ro
      - ./letsencrypt:/letsencrypt

networks:
  default:
    name: proxynet
    external: true

  nginx-site1:
    image: nginx:latest
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.site1.rule=Host(`site1.user.parseq.pro`)"
      - "traefik.http.routers.site1.entrypoints=websecure"
      - "traefik.http.routers.site1.tls=true"
    volumes:
      - ./site1:/usr/share/nginx/html

  nginx-site2:
    image: nginx:latest
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.site2.rule=Host(`site2.user.parseq.pro`)"
      - "traefik.http.routers.site2.entrypoints=websecure"
      - "traefik.http.routers.site2.tls=true"
    volumes:
      - ./site2:/usr/share/nginx/html
